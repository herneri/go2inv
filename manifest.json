{
	"manifest_version": 2,
	"name": "go2inv",
	"version": "1.0",

	"description": "Redirect to a preferred Invidious instance when a YouTube link is clicked.",
	
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"https://www.youtube.com/watch?v=*"
	],

	"browser_action": {
		"default_title": "go2inv",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["go2inv.js"],
		"persistent": false,
		"type": "module"
	}
}
